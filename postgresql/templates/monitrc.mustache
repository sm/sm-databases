check process postgres with pidfile {{service_pid_file}}
  group database
  start program = "/etc/init.d/postgresql start"
  stop  program = "/etc/init.d/postgresql stop"
  if failed unixsocket /var/run/postgresql/.s.PGSQL.{{port}} protocol pgsql
     then restart
  if failed host {{bind}} port {{port}} protocol pgsql then restart
  if 5 restarts within 5 cycles then timeout

