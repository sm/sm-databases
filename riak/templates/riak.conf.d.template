#!/usr/bin/env bash

#
# /etc/conf.d/riak
#

# riak installation location
prefix_path="/usr/local/riak"

# Data directory, note that the first /data is a symlink to the server version.
data_path="/var/db/riak/data"

# Where to keep a log file
log_file="${data_path}/server.log"

# my.cnf file location
config_file="/etc/riak/app.config"

# Who to run the riakd as, usually "riak".  (NOT "root")
user="riak"

