#!/bin/sh

#
# /etc/conf.d/mysql
#

# mysql installation location
prefix_path="/usr/local/mysql"

# Data directory, note that the first /data is a symlink to the server version.
data_path="/var/db/mysql/data"

# Where to keep a log file
log_file="${data_path}/server.log"

# my.cnf file location
config_file="/etc/mysql/my.cnf"

# Who to run the mysqld as, usually "mysql".  (NOT "root")
user="mysql"

